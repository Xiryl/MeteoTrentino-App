<?xml version="1.0" encoding="utf-8"?>
<layout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">
  <data>
  </data>
  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/offset_15"
    app:cardElevation="15dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#387FAF"
    android:orientation="vertical">

    <TextView
      android:id="@+id/item_weather_report_txt_fascia"
      android:layout_width="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="10dp"
      android:layout_height="wrap_content"
      android:textSize="15sp"
      android:text=" Mattina (06-12) "
      android:textStyle="bold"
      android:padding="10dp"
      android:textColor="@color/white_gray"
      />

    <ImageView
      android:id="@+id/item_weather_report_img_arrow"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_arrow_down_small"
      />

    <TextView
      android:id="@+id/item_weather_report_allerta"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fontFamily="@font/os_bold"
      android:gravity="center"
      android:textSize="14sp"
      android:background="#FFCC33"/>

    <LinearLayout
      android:id="@+id/item_weather_report_l_gen"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:layout_marginLeft="@dimen/offset_15"
      android:orientation="horizontal">


      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dati Metereologici "
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white_gray"
        android:fontFamily="@font/os_bold"
        android:textSize="16sp"/>

      <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_margin="7dp"
        android:background="#fff"
        android:layout_gravity="center_vertical"
        ></View>

    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/offset_15"
      android:orientation="horizontal">


      <TextView
        android:id="@+id/item_weather_report_txt_prev_breve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperatura Massima: molto bassa"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#F0F5F9"
        android:textSize="14sp"/>

    </LinearLayout>
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/offset_15"
      android:orientation="horizontal">


      <TextView
        android:id="@+id/item_weather_report_txt_tmax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperatura Massima: molto bassa"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#F0F5F9"
        android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/offset_15"
      android:orientation="horizontal">


      <TextView
        android:id="@+id/item_weather_report_txt_tmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperatura Massima: molto bassa"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#F0F5F9"
        android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/offset_15"
      android:orientation="horizontal">


      <TextView
        android:id="@+id/item_weather_report_txt_zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperatura Massima: zero termico"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#F0F5F9"
        android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/offset_15"
      android:orientation="horizontal">


      <TextView
        android:id="@+id/item_weather_report_txt_pressione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperatura Massima: pressione"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#F0F5F9"
        android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
      android:id="@+id/item_weather_report_l_pioggia"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="@dimen/offset_15"
      android:orientation="horizontal">

      <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_rain"
        />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precipitazioni "
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white_gray"
        android:fontFamily="@font/os_bold"
        android:textSize="16sp"/>

      <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_margin="7dp"
        android:background="#fff"
        android:layout_gravity="center_vertical"
        ></View>

    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/offset_15"
      android:orientation="horizontal">


      <TextView
        android:id="@+id/item_weather_report_txt_prob_prec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prob. precipitazioni: molto bassa"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#F0F5F9"
        android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/offset_15"
      android:orientation="horizontal">


      <TextView
        android:id="@+id/item_weather_report_txt_intensita_prec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Int. precipitazioni: debole"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#F0F5F9"
        android:textSize="14sp"/>

    </LinearLayout>


    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/offset_15"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/item_weather_report_txt_prob_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prob. temporali: bassa"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#F0F5F9"
        android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
      android:id="@+id/item_weather_report_l_vento"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginLeft="@dimen/offset_15"
      android:orientation="horizontal">


      <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_wind"
        />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Venti "
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white_gray"
        android:fontFamily="@font/os_bold"
        android:textSize="16sp"/>
        android:textSize="14sp"/>

      <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_margin="7dp"
        android:background="#fff"
        android:layout_gravity="center_vertical"
        ></View>

    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/offset_15"
      android:orientation="horizontal">
      <TextView
        android:id="@+id/item_weather_report_txt_vento_quota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In quota: debole"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#F0F5F9"
        android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/offset_15"
      android:orientation="horizontal">


      <TextView
        android:id="@+id/item_weather_report_txt_vento_valle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In valle: debole"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#F0F5F9"
        android:textSize="14sp"/>

    </LinearLayout>


    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/offset_15"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/item_weather_report_txt_vento_quota_dir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dir. vento in quota: O"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#F0F5F9"
        android:textSize="14sp"/>

    </LinearLayout>


    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/offset_15"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/item_weather_report_txt_vento_valle_dir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dir. vento in valle: Brezza"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#F0F5F9"
        android:textSize="14sp"/>

    </LinearLayout>



  </LinearLayout>

</android.support.v7.widget.CardView>
</layout>
