<?xml version="1.0" encoding="utf-8"?>
<layout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">
<data />
<RelativeLayout
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#65A8D9">

    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="17dp"
      android:id="@+id/fragmentRadarDayBtnMenu"
      android:background="#00000000"
      android:src="@drawable/ic_arrow_back"/>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="21sp"
      android:textColor="@color/white"
      android:layout_gravity="center_vertical"
      android:gravity="center"
      android:fontFamily="@font/os_regular"
      android:text="Dati Stazioni Metereologiche"/>


  </LinearLayout>

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="65dp"
    android:text="Seleziona una stazione:"/>
  <Spinner
    android:id="@+id/activity_weather_station_spinner"
    android:layout_marginTop="100dp"
    android:layout_width="fill_parent"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:layout_height="wrap_content" />

  <android.support.v7.widget.RecyclerView
    android:layout_marginTop="150dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="horizontal"
    android:id="@+id/activity_weather_station_rv"
    android:orientation="vertical"/>

</RelativeLayout>
</layout>