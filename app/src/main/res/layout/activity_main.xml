<?xml version="1.0" encoding="utf-8"?>
<layout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">
  <data>
  </data>
  <android.support.v4.widget.DrawerLayout
    android:id="@+id/main_activity_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <FrameLayout
      android:id="@+id/activity_main_framelayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />

      <android.support.design.widget.BottomNavigationView
      android:id="@+id/main_activity_bottom_nav"
      android:layout_alignParentBottom="true"
      android:layout_width="match_parent"
        android:layout_gravity="bottom"
      android:layout_height="@dimen/bottom_nav_view_height"

      app:menu="@menu/bottombar_menu"/>
    </RelativeLayout>

    <android.support.design.widget.NavigationView
      android:id="@+id/main_activity_nav_view"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_gravity="start"
      android:fitsSystemWindows="true"
      app:menu="@menu/drawer_menu"/>
  </android.support.v4.widget.DrawerLayout>
</layout>
