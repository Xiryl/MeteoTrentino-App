<?xml version="1.0" encoding="utf-8"?>
<layout>
  <data/>
  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MainFragment">

    <!-- TOOLBAR -->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/toolbar_height"
      android:background="@color/app_azure"
      android:orientation="horizontal">
      <ImageButton
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_gravity="center"
        android:id="@+id/fragment_radar_day_btn_menu"
        android:background="#00000000"
        android:src="@drawable/ic_arrow_back"
        />
      <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Bollettini"
        android:fontFamily="@font/os_regular"
        android:textColor="@color/white"
        android:layout_marginRight="50dp"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/activity_weatherreport_title_size"/>
    </LinearLayout>
    <!-- END TOOLBAR -->

    <!-- MAIN CONTENT -->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_marginTop="@dimen/toolbar_height"
      android:layout_height="match_parent"
      android:background="@color/white"
      android:orientation="vertical">

      <!-- CARD BOLLETTINO PROB -->
      <android.support.v7.widget.CardView
        android:id="@+id/activity_bulletin_crdw_prob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_10"
        android:layout_marginLeft="@dimen/offset_15"
        android:layout_marginRight="@dimen/offset_15"
        android:backgroundTint="@color/white_gray"
        app:cardElevation="@dimen/card_elevation">
        <RelativeLayout
          android:layout_width="wrap_content"
          android:padding="@dimen/card_rl_padding"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/card_text_size"
            android:textColor="@color/blue_main"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/os_bold"
            android:gravity="center"
            android:layout_margin="@dimen/card_text_margin"
            android:text="Bollettino Probabilistico"/>
          <ImageView
            android:layout_width="@dimen/card_img_dimen"
            android:layout_height="@dimen/card_img_dimen"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_arrow_right"/>
        </RelativeLayout>
      </android.support.v7.widget.CardView>
      <!-- END CARD BOLLETTINO PROB -->

      <!-- CARD BOLLETTINO VALANGHE -->
      <android.support.v7.widget.CardView
        android:id="@+id/activity_bulletin_crdw_valanghe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_10"
        android:layout_marginLeft="@dimen/offset_15"
        android:layout_marginRight="@dimen/offset_15"
        android:backgroundTint="@color/white_gray"
        app:cardElevation="@dimen/card_elevation">

        <RelativeLayout
          android:layout_width="wrap_content"
          android:padding="@dimen/card_rl_padding"
          android:layout_height="wrap_content"
          android:orientation="vertical">
          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/card_text_size"
            android:textColor="@color/blue_main"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/os_bold"
            android:gravity="center"
            android:layout_margin="@dimen/card_text_margin"
            android:text="Bollettino Valanghe"/>
          <ImageView
            android:layout_width="@dimen/card_img_dimen"
            android:layout_height="@dimen/card_img_dimen"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_arrow_right"/>
        </RelativeLayout>
      </android.support.v7.widget.CardView>
      <!-- END CARD BOLLETTINO VALANGHE -->

      <!-- CARD BOLLETTINO MONTAGNA -->
      <android.support.v7.widget.CardView
        android:id="@+id/activity_bulletin_crdw_montagna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_10"
        android:layout_marginLeft="@dimen/offset_15"
        android:layout_marginRight="@dimen/offset_15"
        android:backgroundTint="@color/white_gray"
        app:cardElevation="@dimen/card_elevation">

        <RelativeLayout
          android:layout_width="wrap_content"
          android:padding="@dimen/card_rl_padding"
          android:layout_height="wrap_content"
          android:orientation="vertical">
          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/card_text_size"
            android:textColor="@color/blue_main"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/os_bold"
            android:gravity="center"
            android:layout_margin="@dimen/card_text_margin"
            android:text="Bollettino Montagna"/>
          <ImageView
            android:layout_width="@dimen/card_img_dimen"
            android:layout_height="@dimen/card_img_dimen"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right"/>
        </RelativeLayout>
      </android.support.v7.widget.CardView>
      <!-- END CARD BOLLETTINO MONTAGNA -->

    </LinearLayout>
    <!-- END MAIN CONTENT -->

  </RelativeLayout>
</layout>