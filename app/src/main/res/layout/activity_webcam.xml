<?xml version="1.0" encoding="utf-8"?>
<layout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">
  <data />
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TOOLBAR -->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/toolbar_height"
      android:background="@color/app_azure"
      android:orientation="horizontal">
      <ImageButton
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_gravity="center"
        android:id="@+id/fragment_radar_day_btn_menu"
        android:background="#00000000"
        android:src="@drawable/ic_arrow_back"
        />
      <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Webcam del Trentino"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/os_regular"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/activity_weatherreport_title_size"/>
    </LinearLayout>
    <!-- MAIN TOOLBAR -->
    <Spinner
      android:id="@+id/activity_webcam_spinner"
      android:layout_marginTop="80dp"
      android:layout_width="fill_parent"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:layout_height="wrap_content" />



    <TextView
      android:id="@+id/activity_webcam_txtwebcam"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="120dp"
      android:text=""
      android:fontFamily="@font/os_bold"
      android:textColor="@color/blue_main"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:layout_gravity="center"
      android:layout_centerHorizontal="true"/>

    <com.github.chrisbanes.photoview.PhotoView
      android:id="@+id/activity_webcam_img"
      android:layout_marginTop="110dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />

    <me.biubiubiu.justifytext.library.JustifyTextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="50dp"
      android:text="Attenzione:Le webcam non sono di proprietà di Meteo Trentino App, il malfunzionamento o discostamento rispetto alla realtà non è responsabilità dello sviluppatore. Vorresti aggiungere un'altra webcam?Contattami!                                                 "
      android:fontFamily="@font/os_regular"
      android:textSize="11sp"
      android:layout_marginLeft="16dp"
      android:textStyle="italic"
      android:layout_alignParentBottom="true"
      android:layout_marginRight="16dp"
      android:layout_gravity="center"/>

    <ImageView
      android:layout_width="match_parent"
      android:layout_height="@dimen/activity_info_bottom_img_size"
      android:layout_marginBottom="0dp"
      android:layout_alignParentBottom="true"
      android:src="@drawable/img_bottom_background"/>
  </RelativeLayout>
</layout>