<?xml version="1.0" encoding="utf-8"?>
<layout>
  <data/>
    <ScrollView
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <!-- TOOLBAR -->
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/app_azure"
        android:orientation="horizontal">
        <ImageButton
          android:layout_width="55dp"
          android:layout_height="match_parent"
          android:padding="16dp"
          android:layout_gravity="center"
          android:id="@+id/fragment_radar_day_btn_menu"
          android:background="#00000000"
          android:src="@drawable/ic_arrow_back"
          />
        <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          android:text="Radar e Satellite"
          android:fontFamily="@font/os_regular"
          android:textColor="@color/white"
          android:layout_marginRight="50dp"
          android:layout_gravity="center_horizontal"
          android:textSize="@dimen/activity_weatherreport_title_size"/>
      </LinearLayout>
      <!-- END TOOLBAR -->


      <!-- MAIN CONTENT -->
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/toolbar_height"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

      <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_radar_card_height"
        android:layout_margin="@dimen/activity_radar_card_padding"
        android:padding="@dimen/activity_radar_card_margin"
        android:backgroundTint="@color/white_gray"
        app:cardElevation="@dimen/card_elevation">

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="@dimen/activity_radar_card_title_size"
          android:textColor="@color/blue_main"
          android:layout_gravity="center_horizontal"
          android:fontFamily="@font/os_bold"
          android:gravity="center"
          android:layout_margin="5dp"
          android:text="Radar Precipitazioni"/>


        <ImageView
          android:layout_width="match_parent"
          android:layout_marginTop="@dimen/activity_radar_card_img_margin"
          android:layout_marginBottom="@dimen/activity_radar_card_img_margin"
          android:layout_height="match_parent"
          android:id="@+id/fragment_radar_img_radar_nord_italy"/>

      </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
          android:backgroundTint="@color/white_gray"
          android:layout_width="match_parent"
          android:layout_height="@dimen/activity_radar_card_height"
          android:layout_margin="@dimen/activity_radar_card_margin"
          android:padding="@dimen/activity_radar_card_padding"
          app:cardElevation="@dimen/card_elevation">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/activity_radar_card_title_size"
            android:textColor="@color/blue_main"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:fontFamily="@font/os_bold"
            android:layout_margin="5dp"
            android:text="Infrarosso Alpi"/>


          <ImageView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/activity_radar_card_img_margin"
            android:layout_marginBottom="@dimen/activity_radar_card_img_margin"
            android:layout_height="match_parent"
            android:id="@+id/fragment_radar_img_infrarosso_alpi"/>

        </android.support.v7.widget.CardView>

      </LinearLayout>
      <!-- END MAIN CONTENT -->

    </RelativeLayout>
    </ScrollView>
</layout>