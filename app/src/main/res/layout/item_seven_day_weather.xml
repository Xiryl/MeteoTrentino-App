<?xml version="1.0" encoding="utf-8"?>
<layout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">
  <data>
  </data>
      <RelativeLayout
        android:id="@+id/item_sevenday_weather_rl"
        android:layout_width="@dimen/item_sevenday_width"
        android:layout_height="match_parent"
        android:paddingRight="2dp"
        android:paddingLeft="2dp"
        android:background="@drawable/left_border"
        android:layout_marginBottom="0dp">

        <TextView
          android:id="@+id/item_sevenday_weather_txt_data"
          android:layout_width="match_parent"
          android:layout_marginTop="10dp"
          android:layout_gravity="center"
          android:gravity="center"
          android:layout_height="wrap_content"
          android:text="Lun
          24/11"
          android:fontFamily="@font/os_bold"
          android:textSize="15sp"
          android:textStyle="bold"
          android:padding="@dimen/offset_5"
          android:textColor="@color/white" />

        <ImageView
          android:id="@+id/item_sevenday_weather_ico"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:maxWidth="45dp"
          android:maxHeight="45dp"
          android:scaleType="fitCenter"
          android:adjustViewBounds="true"
          android:src="@drawable/ic_w_sun"
          android:layout_marginTop="85dp"
          android:layout_gravity="center"
          />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:orientation="horizontal"
          android:layout_marginTop="155dp">
          <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="20dp"
            android:maxHeight="30dp"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_arrow_up"
            android:layout_gravity="center"
            />
          <TextView
            android:id="@+id/item_sevenday_weather_txt_tmax"
            android:layout_width="35dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="24°"
            android:textSize="14sp"
            android:fontFamily="@font/os_regular"
            android:padding="@dimen/offset_5"
            android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center_horizontal"
          android:layout_marginTop="180dp">
          <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="20dp"
            android:maxHeight="30dp"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_arrow_down"
            android:layout_gravity="center"
            />
          <TextView
            android:id="@+id/item_sevenday_weather_txt_tmin"
            android:layout_width="35dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="2°"
            android:textSize="14sp"
            android:fontFamily="@font/os_regular"
            android:padding="@dimen/offset_5"
            android:textColor="@color/white" />
        </LinearLayout>

        <ImageView
          android:id="@+id/item_sevenday_weather_img_warning"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="230dp"
          android:maxWidth="30dp"
          android:maxHeight="30dp"
          android:padding="4dp"
          android:scaleType="fitCenter"
          android:adjustViewBounds="true"
          android:layout_gravity="center"
          />

        <TextView
          android:layout_width="wrap_content"
          android:layout_gravity="center"
          android:gravity="center"
          android:layout_height="wrap_content"
          android:text="Premi per Bollettino"
          android:layout_marginTop="260dp"
          android:textSize="10sp"
          android:fontFamily="@font/os_regular"
          android:textStyle="italic"
          android:padding="@dimen/offset_5"
          android:textColor="@color/white" />

      </RelativeLayout>

</layout>
