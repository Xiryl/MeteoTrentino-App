<?xml version="1.0" encoding="utf-8"?>
<layout>
  <data/>
  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TOOLBAR -->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/toolbar_height"
      android:background="@color/app_azure">

      <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/os_regular"
        android:textSize="@dimen/toolbar_text_size"
        android:textColor="@color/white"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="Avvisi e Allerte"/>


    </LinearLayout>
    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/toolbar_margin_btn_back"
      android:id="@+id/fragment_radar_day_btn_menu"
      android:background="#00000000"
      android:src="@drawable/ic_arrow_back"
      />
    <!-- END TOOLBAR -->

    <!-- MAIN CONTENT -->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_marginTop="@dimen/toolbar_height"
      android:layout_height="match_parent"
      android:background="@color/white"
      android:orientation="vertical">

      <android.support.v7.widget.CardView
        android:id="@+id/activity_allerte_crdw_provincia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/offset_15"
        android:backgroundTint="@color/white_gray"
        app:cardElevation="@dimen/card_elevation">
        <RelativeLayout
          android:layout_width="wrap_content"
          android:padding="@dimen/card_rl_padding"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/card_text_size"
            android:textColor="@color/blue_main"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/os_bold"
            android:gravity="center"
            android:layout_margin="@dimen/card_text_margin"
            android:text="Allerte Provincia"/>
          <ImageView
            android:layout_width="@dimen/card_img_dimen"
            android:layout_height="@dimen/card_img_dimen"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_link"/>
        </RelativeLayout>

      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
        android:id="@+id/activity_allerte_crdw_meteot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/offset_15"
        android:layout_marginRight="@dimen/offset_15"
        android:backgroundTint="@color/white_gray"
        app:cardElevation="@dimen/card_elevation">

        <RelativeLayout
          android:layout_width="wrap_content"
          android:padding="@dimen/card_rl_padding"
          android:layout_height="wrap_content"
          android:orientation="vertical">
          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/card_text_size"
            android:textColor="@color/blue_main"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/os_bold"
            android:gravity="center"
            android:layout_margin="@dimen/card_text_margin"
            android:text="Allerte meteotrentino.it"/>
          <ImageView
            android:layout_width="@dimen/card_img_dimen"
            android:layout_height="@dimen/card_img_dimen"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_link"/>
        </RelativeLayout>

      </android.support.v7.widget.CardView>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#B95133"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/os_regular"
        android:gravity="center"
        android:layout_marginTop="@dimen/offset_30"
        android:text="Ultime allerte rilevate:"/>

      <android.support.v7.widget.RecyclerView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="horizontal"
        android:id="@+id/activity_allerte_rv"
        android:orientation="vertical"/>
    </LinearLayout>
    <!-- END MAIN CONTENT -->
  </RelativeLayout>
</layout>