<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:layout_margin="@dimen/s_w_margin"
    android:padding="@dimen/widget_margin">
    <ImageButton
        android:id="@+id/small_meteo_widget_btn_refresh"
        android:layout_width="17dp"
        android:background="#00000000"
        android:layout_height="17dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_margin="2dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_refresh"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/small_meteo_widget_weather_img"
        android:layout_width="@dimen/s_w_img_width"
        android:layout_margin="6dp"
        android:src="@drawable/ic_w_sun"
        android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="@dimen/s_w_temperature_width"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/small_meteo_widget_txt_temperatura"
                android:layout_width="70dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_gravity="center"
                android:textSize="42sp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/os_regular"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:text="-"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/small_meteo_widget_txt_temperatura_min_max"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/os_regular"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:text="-"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="105dp"
            android:layout_marginRight="6dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/small_meteo_widget_txt_position"
                android:layout_width="match_parent"
                android:textSize="11sp"
                android:layout_marginRight="6dp"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:fontFamily="@font/os_regular"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="localitÃ "/>
            <TextView
                android:id="@+id/small_meteo_widget_txt_descrizione"
                android:layout_width="match_parent"
                android:layout_marginRight="6dp"
                android:textSize="13sp"
                android:layout_height="match_parent"
                android:fontFamily="@font/os_regular"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="descrizione"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>