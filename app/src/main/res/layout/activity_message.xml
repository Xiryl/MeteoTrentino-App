<?xml version="1.0" encoding="utf-8"?>
<layout>
  <data/>
  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TOOLBAR -->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="120dp"
      android:background="#F8CE5D"
      android:layout_marginBottom="15dp"
      android:orientation="vertical">

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/os_bold"
        android:textSize="@dimen/toolbar_text_size"
        android:textColor="@color/white"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="ALLERTA:\nAvviso Di Notifica Intelligente"/>

      <ImageView
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_warning"
        android:background="#F8CE5D" />

    </LinearLayout>
    <!-- END TOOLBAR -->

    <!-- MAIN CONTENT -->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_marginTop="120dp"
      android:layout_height="match_parent"
      android:background="@color/white"
      android:orientation="vertical">



      <TextView
        android:id="@+id/activity_message_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/os_regular"
        android:textSize="@dimen/toolbar_text_size"
        android:textColor="#000"
        android:layout_margin="20dp"

        android:text="Avviso Notifica Intelligente"/>

    </LinearLayout>

    <ImageView
      android:layout_width="match_parent"
      android:layout_height="@dimen/activity_info_bottom_img_size"
      android:layout_marginBottom="0dp"
      android:layout_alignParentBottom="true"
      android:src="@drawable/img_bottom_background"/>
  </RelativeLayout>
</layout>